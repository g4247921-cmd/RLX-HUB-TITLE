local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- üîÑ Bersihkan GUI lama jika di-run ulang
if playerGui:FindFirstChild("RLX_TitleGiver_Full") then
	pcall(function()
		playerGui.RLX_TitleGiver_Full:Destroy()
	end)
end

-- üß± ScreenGui utama
local gui = Instance.new("ScreenGui")
gui.Name = "RLX_TitleGiver_Full"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = playerGui

------------------------------------------------------------
-- üåü SPLASH LOGO (klik untuk skip)
------------------------------------------------------------

local splash = Instance.new("Frame", gui)
splash.Size = UDim2.new(1, 0, 1, 0)
splash.BackgroundColor3 = Color3.fromRGB(5, 40, 10)
splash.ZIndex = 50

local logoBtn = Instance.new("ImageButton", splash)
logoBtn.Name = "LogoButton"
logoBtn.AnchorPoint = Vector2.new(0.5, 0.5)
logoBtn.Size = UDim2.new(0.5, 0, 0.5, 0)
logoBtn.Position = UDim2.new(0.5, 0, 0.45, 0)
logoBtn.Image = "rbxassetid://109697835942498"
logoBtn.BackgroundTransparency = 1
logoBtn.ImageTransparency = 1
logoBtn.ZIndex = 51
logoBtn.AutoButtonColor = false
logoBtn.ScaleType = Enum.ScaleType.Fit

-- üéûÔ∏è Helper animasi fade
local function fadeImage(img, from, to, steps, waitTime)
	steps = steps or 10
	waitTime = waitTime or 0.03
	for i = 0, steps do
		local t = from + (to - from) * (i / steps)
		pcall(function() img.ImageTransparency = t end)
		task.wait(waitTime)
	end
end

local splashDone = false

local function finishSplash()
	if splashDone then return end
	splashDone = true
	for i = 1, 12 do
		pcall(function()
			splash.BackgroundTransparency = i * (1 / 12)
		end)
		task.wait(0.03)
	end
	pcall(function() splash:Destroy() end)
end

-- üåÖ Fade in logo & auto skip
task.spawn(function()
	fadeImage(logoBtn, 1, 0, 12, 0.03)
	local timer = 0
	while timer < 2 do
		if splashDone then return end
		task.wait(0.2)
		timer += 0.2
	end
	if not splashDone then finishSplash() end
end)

logoBtn.MouseButton1Click:Connect(finishSplash)

