------------------------------------------------------------
-- üîî NOTIF POPUP
------------------------------------------------------------

local function popup(text, col)
	col = col or Color3.new(1, 1, 1)
	local n = Instance.new("TextLabel", gui)
	n.Size = UDim2.new(0, 260, 0, 42)
	n.Position = UDim2.new(0.5, -130, 0.05, 0)
	n.AnchorPoint = Vector2.new(0.5, 0)
	n.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	n.TextColor3 = col
	n.Font = Enum.Font.GothamBold
	n.TextSize = 16
	n.Text = text
	n.ZIndex = 60
	Instance.new("UICorner", n).CornerRadius = UDim.new(0, 8)

	for i = 1, 10 do
		n.TextTransparency = 1 - i * 0.1
		n.BackgroundTransparency = 1 - i * 0.1
		task.wait(0.02)
	end
	task.wait(1.2)
	for i = 1, 10 do
		n.TextTransparency = i * 0.1
		n.BackgroundTransparency = i * 0.1
		task.wait(0.02)
	end
	pcall(function() n:Destroy() end)
end

------------------------------------------------------------
-- üßæ TITLE FUNCTION
------------------------------------------------------------

local function setTitle(pl, txt, col)
	local char = pl.Character or pl.CharacterAdded:Wait()
	local head = char:FindFirstChild("Head")
	if not head then return end

	local old = head:FindFirstChild("RLX_Title")
	if old then old:Destroy() end

	local bill = Instance.new("BillboardGui", head)
	bill.Name = "RLX_Title"
	bill.Size = UDim2.new(0, 200, 0, 50)
	bill.StudsOffset = Vector3.new(0, 2.5, 0)
	bill.AlwaysOnTop = true

	local lbl = Instance.new("TextLabel", bill)
	lbl.Size = UDim2.new(1, 0, 1, 0)
	lbl.BackgroundTransparency = 1
	lbl.Font = Enum.Font.GothamBold
	lbl.TextColor3 = col
	lbl.TextStrokeTransparency = 0.4
	lbl.TextSize = 18
	lbl.Text = txt
end

------------------------------------------------------------
-- üîó CONNECTIONS
------------------------------------------------------------

hubBtn.MouseButton1Click:Connect(function()
	hubFrame.Visible = not hubFrame.Visible
end)

titleBtn.MouseButton1Click:Connect(function()
	titleFrame.Visible = not titleFrame.Visible
end)

applyBtn.MouseButton1Click:Connect(function()
	local txt = input.Text ~= "" and input.Text or "Player"
	setTitle(player, txt, chosenColor)
	popup("‚úÖ Title berhasil dipasang!", Color3.fromRGB(100, 255, 100))
end)

resetBtn.MouseButton1Click:Connect(function()
	local head = player.Character and player.Character:FindFirstChild("Head")
	if head and head:FindFirstChild("RLX_Title") then
		head.RLX_Title:Destroy()
	end
	input.Text = ""
	popup("‚ôªÔ∏è Title direset!", Color3.fromRGB(255, 200, 200))
end)

logoBtn.MouseButton1Click:Connect(function()
	if splash and splash.Parent then
		pcall(function() splash:Destroy() end)
	end
	hubFrame.Visible = true
end)

print("‚úÖ RLX Title Giver UI Loaded Successfully!")
